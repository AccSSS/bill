<!DOCTYPE html>
<html>
<%- include("./header.ejs") %>
<body>
<%- include("./headerBar.ejs") %>
<section class="billList-Wrapper">
    <h3 style="border-bottom:1px solid #ccc;padding-bottom:10px;">
        总览
    </h3>
    <% if(billList.length > 0) { %>
    <div class="layui-field-box">
        总计：<%= sum %> 人均：<%= per %>
    </div>
    <table class="layui-table" lay-skin="line">
        <colgroup>
            <col>
            <col>
            <col>
            <col>
            <col>
        </colgroup>
        <thead>
        <tr>
            <th>时间</th>
            <th>类型</th>
            <th>花费</th>
            <th>成员</th>
            <th>备注</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i = 0; i < billList.length; i++) { %>
        <tr>
            <td><%= billList[i].time %></td>
            <td><%= billList[i].type %></td>
            <td><%= billList[i].money %></td>
            <td><%= billList[i].username %></td>
            <td><%= billList[i].descr %></td>
            <td>
                <% if(billList[i].handle) { %>
                <a href="javascript:none;" class="del" data-billid = <%= billList[i].id %>>删除</a>
                <a href="addBill?edit=true&id=<%= billList[i].id %>">修改</a>
                <% } %>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
    <% } else { %>
    <div>
        暂无账单记录
    </div>
    <% } %>
</section>
</body>
<%- include("./footer.ejs") %>
<script>
    let main = new Main();
</script>
</html>
